# ===========================================
# ملف المتغيرات البيئية - .env
# ===========================================
# انسخ هذا الملف إلى .env وعدّل القيم حسب بيئتك
# cp .env.example .env

# ===========================================
# قاعدة البيانات (Database)
# ===========================================

# للتطوير المحلي (Local Development) - SQLite
# DATABASE_URL=sqlite:///sawaedna.db

# للإنتاج (Production) - PostgreSQL على Neon
# احصل عليه من: https://neon.tech
# مثال: postgresql://user:password@ep-xxx.us-east-2.aws.neon.tech/dbname?sslmode=require
DATABASE_URL=postgresql://your_user:your_password@your_host.neon.tech/your_database?sslmode=require

# ===========================================
# Flask Configuration
# ===========================================

# مفتاح سري للجلسات (Secret Key)
# يمكنك توليده بـ: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-change-this-in-production

# بيئة التشغيل (Environment)
# development أو production
FLASK_ENV=production

# تفعيل وضع التطوير (Debug Mode)
# True للتطوير، False للإنتاج
FLASK_DEBUG=False

# ===========================================
# Google Sheets API (اختياري)
# ===========================================
# إذا كنت تستخدم Google Sheets API
# احصل عليها من: https://console.cloud.google.com/

GOOGLE_SHEETS_CREDENTIALS_FILE=credentials.json
GOOGLE_SHEETS_SPREADSHEET_ID=your-spreadsheet-id

# ===========================================
# Email Configuration (اختياري)
# ===========================================
# لإرسال الإشعارات عبر البريد الإلكتروني

MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# ===========================================
# Application Settings
# ===========================================

# عنوان التطبيق
APP_NAME=سواعدنا - إدارة التكاليف

# اللغة الافتراضية
DEFAULT_LANGUAGE=ar

# المنطقة الزمنية
TIMEZONE=Africa/Cairo

# ===========================================
# Security Settings
# ===========================================

# السماح بـ CORS (Cross-Origin Resource Sharing)
CORS_ENABLED=False

# الدومينات المسموح بها
ALLOWED_HOSTS=localhost,127.0.0.1,*.vercel.app

# ===========================================
# File Upload Settings
# ===========================================

# الحد الأقصى لحجم الملف (بالميجابايت)
MAX_CONTENT_LENGTH=16

# مجلد رفع الملفات
UPLOAD_FOLDER=uploads

# الامتدادات المسموح بها
ALLOWED_EXTENSIONS=xlsx,xls,pdf,png,jpg,jpeg

# ===========================================
# Logging
# ===========================================

# مستوى السجلات (Logging Level)
# DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ===========================================
# Redis (اختياري - للـ Caching)
# ===========================================

REDIS_URL=redis://localhost:6379/0

# ===========================================
# Celery (اختياري - للمهام الخلفية)
# ===========================================

CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ===========================================
# ملاحظات مهمة
# ===========================================
# 1. لا تشارك هذا الملف على GitHub
# 2. أضف .env إلى .gitignore
# 3. غيّر SECRET_KEY في الإنتاج
# 4. استخدم كلمات مرور قوية
# 5. فعّل SSL في الإنتاج

